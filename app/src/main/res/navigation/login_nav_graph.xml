<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/fragmentWelcome">
    <fragment
        android:id="@+id/fragmentWelcome"
        android:name="com.example.appproject.login.FragmentWelcome"
        android:label="Poll-It"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_fragmentWelcome_to_fragmentSignIn"
            app:destination="@id/fragmentSignIn" />
        <action
            android:id="@+id/action_fragmentWelcome_to_fragmentRegister"
            app:destination="@id/fragmentRegister" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSignIn"
        android:name="com.example.appproject.login.FragmentSignIn"
        android:label="Sign In"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_fragmentSignIn_to_fragmentActivePoll"
            app:destination="@id/fragmentActivePoll" />
    </fragment>
    <fragment
        android:id="@+id/fragmentRegister"
        android:name="com.example.appproject.login.FragmentRegister"
        android:label="Register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/fragmentActivePoll"
        android:name="com.example.appproject.FragmentActivePoll"
        android:label="Let's Get Started"
        tools:layout="@layout/fragment_active_poll">
        <action
            android:id="@+id/action_fragmentActivePoll_to_fragmentPollQuestion"
            app:destination="@id/fragmentPollQuestion" />
    </fragment>
    <fragment
        android:id="@+id/fragmentPollQuestion"
        android:name="com.example.appproject.FragmentPollQuestion"
        android:label="Active Poll"
        tools:layout="@layout/fragment_poll_question" />
    <fragment
        android:id="@+id/fragmetnUserDetails"
        android:name="com.example.appproject.FragmentUserDetails"
        android:label="Sign In"
        tools:layout="@layout/fragment_user_details" >
        <action
            android:id="@+id/action_fragmetnUserDetails_to_fragmentActivePoll"
            app:destination="@id/fragmentActivePoll" />
    </fragment>
    <action
        android:id="@+id/action_global_fragmetnUserDetails"
        app:destination="@id/fragmetnUserDetails"
        app:popUpTo="@id/fragmentWelcome"
        app:popUpToInclusive="true" />
</navigation>