<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="Theme.MaterialComponents.Light">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="Theme.MaterialComponents.Light">
        <item name="cornerSize">15%</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:background">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="PrizeDropDownMenu" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>