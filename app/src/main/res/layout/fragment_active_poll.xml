<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FragmentActivePoll" >

    <TextView
        android:id="@+id/ActivePoll_username_tv"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ActivePoll_ready_tv"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Ready to earn?"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivePoll_username_tv" />

    <TextView
        android:id="@+id/ActivePoll_remember_tv"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Remember, an unhonest answers may cause rejction"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivePoll_ready_tv" />

    <ImageView
        android:id="@+id/ActivePoll_logo"
        android:layout_width="359dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo__nobg_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivePoll_remember_tv" />

    <Button
        android:id="@+id/ActivePoll_start_btn"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="I understand, Let's start !"
        android:textSize="14sp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivePoll_logo" />

    <Button
        android:id="@+id/ActivePoll_info_btn"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:text="Not sure? For more information click here"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ActivePoll_start_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>