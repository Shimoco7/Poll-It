<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707">

    <EditText
        android:id="@+id/Register_txt_username"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_account"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="User Name"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="242dp" />

    <EditText
        android:id="@+id/register_txt_password"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Password"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/register_password_tv"
        app:layout_constraintTop_toBottomOf="@+id/Register_txt_username" />

    <EditText
        android:id="@+id/register_txt_confirmpassword"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Password"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/register_btn"
        app:layout_constraintStart_toEndOf="@+id/register_confirm_tv"
        app:layout_constraintTop_toBottomOf="@+id/register_txt_password"
        app:layout_constraintVertical_bias="0.507" />

    <ImageView
        android:id="@+id/register_logo"
        android:layout_width="306dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo__nobg_2" />

    <TextView
        android:id="@+id/register_email_tv"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:text="User Name:"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_logo" />

    <TextView
        android:id="@+id/register_confirm_tv"
        android:layout_width="115dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:text="confirm Password:"
        android:textColor="@color/white"
        android:textSize="22"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password_tv" />

    <TextView
        android:id="@+id/register_password_tv"
        android:layout_width="116dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_vertical"
        android:text="Password:"
        android:textColor="@color/white"
        android:textSize="22"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_confirm_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email_tv" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="24dp"
        android:text="Register"
        app:cornerRadius="37sp"
        app:layout_constraintBottom_toTopOf="@+id/register_about_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_confirm_tv" />

    <Button
        android:id="@+id/register_about_btn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="To learn about our honstey policy click here" />

</androidx.constraintlayout.widget.ConstraintLayout>