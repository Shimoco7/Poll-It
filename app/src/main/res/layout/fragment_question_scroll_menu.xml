<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ImageframeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E7E7"
    android:backgroundTint="#000000"
    tools:context=".poll.FragmentPollQuestionMultiChoice">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/poll_scroll_question_title"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/what_is_your_answer"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/poll_scroll_card_scroll_ans"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poll_scroll_question_title">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/details_list_tv"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="8dp"
                android:textColorHint="@color/white"
                app:boxBackgroundColor="@color/black"
                app:boxBackgroundMode="filled"
                app:boxStrokeColor="@color/primeOrng"
                app:boxStrokeErrorColor="@color/primeRed"
                app:boxStrokeWidth="1dp"
                app:endIconMode="dropdown_menu"
                app:endIconTint="@color/white"
                app:errorEnabled="true"
                app:errorTextColor="@color/primeRed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconTint="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/details_list_ac"
                    style="style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:cursorVisible="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif-light"
                    android:inputType="none|textNoSuggestions"
                    android:text=""
                    android:textColor="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/poll_scroll_btn_line2"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#978F8F"
            app:cornerRadius="100px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poll_scroll_card_scroll_ans" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/poll_scroll_materialCardView2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poll_scroll_btn_line2"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:strokeColor="@color/primeOrng"
            app:strokeWidth="2dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/poll_scroll_txt_qnumber"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_marginBottom="50dp"
                android:background="@color/black"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="1/4"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/poll_scroll_btn_left"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="50dp"
            android:drawableTop="@drawable/ic_leftarrow"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/poll_scroll_btn_right"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:drawableTop="@drawable/ic_rightarrow"
            android:fontFamily="sans-serif-black"
            android:textSize="10dp"
            app:cornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />

        <ProgressBar
            android:id="@+id/poll_scroll_question_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>